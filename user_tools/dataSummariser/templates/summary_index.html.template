<html>
  <head>
    <meta name="viewport"
	  content="width=device-width, initial-scale=1, shrink-to-fit=no">    
    <title>Open Seizure Database Events Summary</title>
    <script src="js/jquery-3.6.0.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <style>
      table.table { width:auto; }
    </style>
  </head>
  
  <body>
    <div class="page-header">
      <h1>Open Seizure Database Events Summary</h1>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">OpenSeizureDetector</a>      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
	<ul class="navbar-nav mr-auto">
	  <li class="nav-item active">
	    <a class="nav-link" href="#TcSeizures">Tonic-Clonic Seizures</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link" href="#AllSeizures">All Seizures</a>
	  </li>
	  <li class="nav-item">
	    <a class="nav-link" href="#FalseAlarms">False Alarms</a>
	  </li>
	</ul>
      </div>
    </nav>
    {% for eventType in data.events %}
    <h2 id="TcSeizures">{{ eventType }}</h2>
    <table class="table table-bordered table-sm">
      <tr>
	<th>Event Id</th><th>Date</th><th>UserId</th>
	<th>Type</th><th>subType</th><th>Description</th>
      </tr>
      {% for eventObj in data.events[eventType] %}
      <tr>
	<td><a href='{{ eventObj.url }}'>{{ eventObj.id }}</a></td>
	<td>{{ eventObj.dataTime }}</td>
	<td>{{ eventObj.userId }}</td>
	<td>{{ eventObj.type }}</td>
	<td>{{ eventObj.subType }}</td>
	<td>{{ eventObj.desc }}</td>
	<td><img width=100px src="Event_{{eventObj.id}}_summary/rawData.png">
	<td><a href='{{ eventObj.url }}'>summary</a></td>
      </tr>
      {% endfor %}
    </table>
    {% endfor %}
    <h2 id="AllSeizures">All Seizures</h2>

    <h2 id="FalseAlarms">False Alarms</h2>


    <p>This page was generated at {{ data.pageDateStr }}.
    </p>
  </body>
</html>
